<?xml version="1.0" encoding="UTF-8"?>
<!-- add spring-context-4.2.xsd to support annotation autowiring. and we 
	can use context:annotation-config -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<bean id="logger" class="com.yu.spring.Logger"></bean>

	<!-- We can also use "primary to avoid ambiguities" -->
	<bean id="consoleWriter" class="com.yu.spring.ConsoleWriter">
		<qualifier value="toconsole"></qualifier>
	</bean>

	<bean id="fileWriter" class="com.yu.spring.FileWriter"></bean>

	<bean id="anotherConsoleWriter" class="com.yu.spring.ConsoleWriter"></bean>
	
	<bean id="anotherFileWriter" class="com.yu.spring.FileWriter"></bean>
	
	<context:annotation-config></context:annotation-config>
</beans>
