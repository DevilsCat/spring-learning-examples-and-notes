<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-autowire="byName"
	default-autowire-candidates="*Writer">

	<!-- The above using "default-autowire" such that the default behavior of 
		autowiring is byName if no overriding. We can also use byType respectively. -->
	<!-- The "*" used to perform regex filtering of beans -->
	<bean id="logger" class="com.yu.spring.Logger">

	</bean>

	<!-- make sure id should be identical with the Logger class variables' name. -->
	<!-- "id" can also be replace by "name" -->
	<bean id="consoleWriter" class="com.yu.spring.ConsoleWriter"></bean>

	<bean id="fileWriter" class="com.yu.spring.FileWriter"></bean>

	<bean id="anotherFileWriter" class="com.yu.spring.FileWriter"></bean>

</beans>
