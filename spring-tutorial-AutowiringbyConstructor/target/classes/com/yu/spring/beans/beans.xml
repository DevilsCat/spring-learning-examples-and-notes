<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Since consolewriter and filewriter are passed by interface -->
	<bean id="logger" class="com.yu.spring.Logger" autowire="byName">

	</bean>

	<!-- make sure id should be identical with the Logger class variables' name. -->
	<!-- "id" can also be replace by "name" -->
	<bean id="consoleWriter" class="com.yu.spring.ConsoleWriter"></bean>

	<bean id="fileWriter" class="com.yu.spring.FileWriter"></bean>

</beans>
